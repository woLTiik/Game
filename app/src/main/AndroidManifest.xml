<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.woltik.game">

    <application
        android:allowBackup="true"
        android:icon="@drawable/favicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HighScore" />
        <activity android:name=".Settings" />
        <activity android:name=".About" />
        <activity android:name=".Options" />
        <activity
            android:name=".MultiplayerGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_solo_game"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".FinalScreen" />
        <activity android:name=".EnterNames"></activity>
    </application>

</manifest>